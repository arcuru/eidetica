{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:best-practices"],
  "platform": "github",
  "repositories": ["arcuru/eidetica"],
  "enabledManagers": ["cargo", "github-actions", "nix"],
  "schedule": ["* 0-3 1 * *"],
  "prConcurrentLimit": 5,
  "minimumReleaseAge": "14 days",
  "commitMessagePrefix": "chore(deps):",
  "commitMessageAction": "update",
  "commitMessageTopic": "{{depName}}",
  "packageRules": [
    {
      "description": "Separate security updates for immediate attention",
      "matchUpdateTypes": ["pin", "digest", "patch", "minor", "major"],
      "matchDatasources": ["crate", "github-tags"],
      "vulnerabilityAlerts": {
        "enabled": true
      },
      "labels": ["security"],
      "groupName": null,
      "schedule": ["* 0-3 * * 1"]
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions"
    },
    {
      "description": "Group all Nix flake updates together",
      "matchManagers": ["nix"],
      "groupName": "Nix flake updates"
    },
    {
      "description": "Group Cargo workspace dependencies",
      "matchManagers": ["cargo"],
      "matchFileNames": ["Cargo.toml"],
      "groupName": "Cargo workspace dependencies"
    },
    {
      "description": "Pin actions/checkout to v4 for Forgejo compatibility",
      "matchManagers": ["github-actions"],
      "matchPackageNames": ["actions/checkout"],
      "matchFileNames": [".forgejo/workflows/**"],
      "allowedVersions": "<5.0.0"
    }
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "labels": ["dependencies"],
  "assigneesFromCodeOwners": true,
  "reviewersFromCodeOwners": true
}
